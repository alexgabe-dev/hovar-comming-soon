{
  "$schema": "https://ui.shadcn.com/schema.json",
  "style": "default", // shadcn/ui style
  "rsc": true, // React Server Components
  "tsx": true, // TypeScript support
  "tailwind": {
    "config": "tailwind.config.ts", // tailwind config path
    "css": "app/globals.css", // global CSS file
    "baseColor": "neutral", // base color scheme
    "cssVariables": true, // use CSS variables
    "prefix": "" // no prefix
  },
  "aliases": {
    "components": "@/components", // components path
    "utils": "@/lib/utils", // utils path
    "ui": "@/components/ui", // UI components path
    "lib": "@/lib", // lib path
    "hooks": "@/hooks" // hooks path
  },
  "iconLibrary": "lucide" // icon library
}